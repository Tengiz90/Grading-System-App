<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework5.ManageMarksPage"
             Title="Manage Marks">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label x:Name="studentLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Homework 1" />
            <Entry x:Name="Homework1Entry" Keyboard="Numeric"/>

            <Label Text="Homework 2" />
            <Entry x:Name="Homework2Entry" Keyboard="Numeric"/>

            <Label Text="Homework 3" />
            <Entry x:Name="Homework3Entry" Keyboard="Numeric"/>

            <Label Text="Homework 4" />
            <Entry x:Name="Homework4Entry" Keyboard="Numeric"/>

            <Label Text="Homework 5" />
            <Entry x:Name="Homework5Entry" Keyboard="Numeric"/>

            <Label Text="Homework 6" />
            <Entry x:Name="Homework6Entry" Keyboard="Numeric"/>

            <Label Text="Homework 7" />
            <Entry x:Name="Homework7Entry" Keyboard="Numeric"/>

            <Label Text="Homework 8" />
            <Entry x:Name="Homework8Entry" Keyboard="Numeric"/>

            <Label Text="Homework 9" />
            <Entry x:Name="Homework9Entry" Keyboard="Numeric"/>

            <Label Text="Homework 10" />
            <Entry x:Name="Homework10Entry" Keyboard="Numeric"/>

            <Label Text="Midterm Exam" />
            <Entry x:Name="MidtermExamEntry" Keyboard="Numeric"/>

            <Label Text="Presentation" />
            <Entry x:Name="PresentationEntry" Keyboard="Numeric"/>

            <Label Text="Final Exam" />
            <Entry x:Name="FinalExamEntry" Keyboard="Numeric"/>

            <Button Text="Save Marks"
                    Clicked="OnSaveMarksClicked"
                    BackgroundColor="#34C759"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,15,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
