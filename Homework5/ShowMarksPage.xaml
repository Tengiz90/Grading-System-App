<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework5.ShowMarksPage"
             Title="Marks">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Start">

            <Label x:Name="studentLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

     
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 1:" FontAttributes="Bold" />
                <Label x:Name="Homework1Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 2:" FontAttributes="Bold" />
                <Label x:Name="Homework2Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 3:" FontAttributes="Bold" />
                <Label x:Name="Homework3Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 4:" FontAttributes="Bold" />
                <Label x:Name="Homework4Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 5:" FontAttributes="Bold" />
                <Label x:Name="Homework5Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 6:" FontAttributes="Bold" />
                <Label x:Name="Homework6Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 7:" FontAttributes="Bold" />
                <Label x:Name="Homework7Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 8:" FontAttributes="Bold" />
                <Label x:Name="Homework8Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 9:" FontAttributes="Bold" />
                <Label x:Name="Homework9Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Homework 10:" FontAttributes="Bold" />
                <Label x:Name="Homework10Label" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Midterm Exam:" FontAttributes="Bold" />
                <Label x:Name="MidtermExamLabel" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Presentation:" FontAttributes="Bold" />
                <Label x:Name="PresentationLabel" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Final Exam:" FontAttributes="Bold" />
                <Label x:Name="FinalExamLabel" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
